<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SPrvoider.SP7ChooseSkillSProvider">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Back Button -->
        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/backbtn_sprovider_"
            android:background="@drawable/back_button_background_sprovider"
            android:contentDescription="Back Button"
            android:scaleType="centerInside"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <!-- Logo -->
        <ImageView
            android:id="@+id/logoImage"
            android:layout_width="260dp"
            android:layout_height="46dp"
            android:layout_marginTop="55dp"
            android:src="@drawable/final_logo__service_provider__short"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Subtitle Text -->
        <TextView
            android:id="@+id/subtitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/medium_poppins"
            android:text="Provider App"
            android:textColor="#7A7A7A"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/logoImage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Skills and Services Title -->
        <TextView
            android:id="@+id/skillsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:fontFamily="@font/medium_poppins"
            android:text="Skills and Services"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@+id/subtitleText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Skills and Services Checkboxes -->
        <LinearLayout
            android:id="@+id/skillsLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/skillsTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">


            <CheckBox
                android:id="@+id/checkbox_landscaping"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/blue_border"
                android:layout_marginBottom="10dp"
                android:buttonTint="@color/blue"
                android:text="Landscaping"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:fontFamily="@font/medium_poppins"
                android:padding="12dp"/>

            <CheckBox
                android:id="@+id/checkbox_pet_grooming"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/blue_border"
                android:layout_marginBottom="10dp"
                android:buttonTint="@color/blue"
                android:text="Pet Grooming"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:fontFamily="@font/medium_poppins"
                android:padding="12dp"/>



            <CheckBox
                android:id="@+id/checkbox_grocery_shopping"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/blue_border"
                android:layout_marginBottom="10dp"
                android:buttonTint="@color/blue"
                android:text="Grocery Shopping"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:fontFamily="@font/medium_poppins"
                android:padding="12dp"/>

            <CheckBox
                android:id="@+id/checkbox_laundry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/blue_border"
                android:layout_marginBottom="10dp"
                android:buttonTint="@color/blue"
                android:text="Laundry"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:fontFamily="@font/medium_poppins"
                android:padding="12dp"/>

            <CheckBox
                android:id="@+id/checkbox_lorem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/blue_border"
                android:layout_marginBottom="10dp"
                android:buttonTint="@color/blue"
                android:text="Lorem"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:fontFamily="@font/medium_poppins"
                android:padding="12dp"/>
        </LinearLayout>

        <!-- Next Button -->
        <Button
            android:id="@+id/nextButton"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginTop="32dp"
            android:text="Next"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:fontFamily="@font/medium_poppins"
            android:background="@drawable/btn_rounded_corner_sprovider"
            app:layout_constraintTop_toBottomOf="@+id/skillsLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>