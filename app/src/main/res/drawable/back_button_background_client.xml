<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#E0E0E0"/> <!-- Change to your desired pressed color -->
            <corners android:radius="8dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#FFFFFF"/> <!-- Change to your desired normal color -->
            <corners android:radius="8dp"/>
        </shape>
    </item>
</selector>